<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>GeyserCooker</defName>
    <label>Geyser Cooker</label>
    <description>A shallow pool of near-boiling water sourced from a nearby steam geyser. It can be used to slowly boil food into a simple cooked meal. Since water evaporates at 100°C, this cooker is unable to produce hot enough temperatures for more advanced cooking methods.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Buildings/GeyserCooker</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <allowFlip>false</allowFlip>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <surfaceType>Item</surfaceType>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>900</WorkToBuild>
      <Flammability>0</Flammability>
      <WorkTableWorkSpeedFactor>0.15</WorkTableWorkSpeedFactor>
    </statBases>
    <size>(2,2)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>25</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <rotatable>false</rotatable>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <recipes>
      <li>CookMealSimple</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <isMealSource>true</isMealSource>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <placeWorkers>
      <li>PlaceWorker_OnSteamGeyser</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
  </ThingDef>
</Defs>